class Solution(object):
    def arrangeCoins(self, n):
        count = 0 
        row = 1
        rest = n
        stairs = 0 
        if n == 1 : 
            return 1 
        for i in range (7):
            while rest-row>= 0 : 
                rest -=row 
                row +=1
                count +=1
            return count 



         

        """
        :type n: int
        :rtype: int
        """
